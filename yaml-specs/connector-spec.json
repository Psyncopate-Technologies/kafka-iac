{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Kafka Connector Configuration",
    "type": "object",
    "properties": {
      "pipeline_version": {
        "type": "string"
      },
      "name": {
        "type": "string"
      },
      "description": {
        "type": "string"
      },
      "mal_acronym": {
        "type": "string"
      },
      "srb_review_number": {
        "type": "string"
      },
      "identity_pool_name": {
        "type": "string"
      },
      "oauth_client_id": {
        "type": "string"
      },
      "oauth_client_secret_vault_location": {
        "type": "string"
      },
      "schema_registry_required_for_key": {
        "type": "boolean"
      },
      "schema_registry_required_for_value": {
        "type": "boolean"
      },
      "key_converter": {
        "type": "string"
      },
      "value_converter": {
        "type": "string"
      },
      "connector_type": {
        "type": "string",
        "enum": [
          "source",
          "sink"
        ]
      },
      "topics": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "connector_class": {
        "type": "string"
      },
      "tasks": {
        "type": "integer",
        "minimum": 1
      },
      "connect_cluster_name": {
        "type": "string"
      },
      "configs": {
        "type": "object",
        "patternProperties": {
          ".*": {
            "type": [
              "string",
              "number",
              "boolean"
            ]
          }
        },
        "additionalProperties": true
      }
    },
    "required": [
      "name",
      "mal_acronym",
      "srb_review_number",
      "oauth_client_id",
      "oauth_client_secret_vault_location",
      "connector_class",
      "tasks",
      "configs"
    ],
    "additionalProperties": false
  }